{
  "compilerOptions": {
    "target": "ES6",                              
    "module": "ES6",                             
    "esModuleInterop": true,                         
    "forceConsistentCasingInFileNames": true,           
    "strict": true,                               
    "skipLibCheck": true,      
    "outDir": "./src",
    "lib": ["ES6", "DOM"]
  },
  "include": ["./src/*"],
  "exclude": ["node_modules/*"]
}
